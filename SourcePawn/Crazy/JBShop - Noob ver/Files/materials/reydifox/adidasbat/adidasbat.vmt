Vertexlitgeneric
{

	// MAIN SETTINGS
	$basetexture                "reydifox/adidasbat/diffuse"      // Diffuse Map
	$bumpmap                    "reydifox/adidasbat/normal"       // Normal Map

	// PHONG SHADING
	$phong                      1                      // Enable Phong Shading
	$phongboost                 2                   // Increase brightness of Phong highlight
	//$phongfresnelranges         "[.1 .4 .6]"              // Intensity of Phong depending on view angle
	$phongfresnelranges         "[1 4 6]"              // Intensity of Phong depending on view angle
	//$phongtint                  "[.8 .8 1]"            // Tint the phong highlight (RGB value)
	$phongtint                  "[.08 .08 .1]"            // Tint the phong highlight (RGB value)
	$phongexponenttexture       "reydifox/adidasbat/gloss"     // Exponent (gloss) Map
	$phongalbedotint            1                      // Allows Diffuse to color phong highlights
	$phongalbedoboost           48                     // Increase brightness of AlbedoTint effect
	$normalmapalphaphongmask    1                      // Use alpha channel in normal Map to mask Phong highlight

	// ENVIRONMENT REFLECTION
	//$envmap                     env_cubemap            // Enable Specular Reflection and let level choose cubemap
	$envmaptint                 "[.075 .075 .125]"     // Tint the Specular Reflection (RGB value)
	//$envmaptint                 "[.0075 .0075 .0125]"     // Tint the Specular Reflection (RGB value)
	$normalmapalphaenvmapmask   1                      // Use alpha channel in Normal Map to mask Specular Reflection

	// RIM LIGHT
	$rimlight                   1                      // Enable Rim Lighting
	$rimlightexponent           24                     // Tightness of Rim Light highlight
	$rimlightboost              1.2                    // Increase brightness of Rim Light highlight
	$rimmask                    1                      // Use alpha channel in Exponent Map to mask Rim Light
}